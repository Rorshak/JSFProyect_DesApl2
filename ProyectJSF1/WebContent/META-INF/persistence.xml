<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
			http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	
	<persistence-unit name="tesdb" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>utng.jsf.entities.User</class>
		<class>utng.jsf.entities.SecurityRole</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PosgreSQLDialect" />
			<property name="hibernate.hbm2dll.auto" value="create" />
			<property name="hibernate.connection.driver_class" value="org.posgresql.Driver" />
			<property name="hibernate.connection.url" value="jdbc:posgresql://localhost:5432/testdb" />
			<property name="hibernate.connection.username" value="utng" />
			<property name="hibernate.connection.password" value="mexico" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
	
</persistence>